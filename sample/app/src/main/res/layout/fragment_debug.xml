<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <me.shouheng.uix.widget.button.NormalButton
                    android:id="@+id/btn_observable"
                    app:btn_corner_radius="5dp"
                    android:text="@string/sample_main_navigate_observable"
                    style="@style/MenuButton"/>

            <me.shouheng.uix.widget.button.NormalButton
                    android:id="@+id/btn_observable_list"
                    app:btn_corner_radius="5dp"
                    android:text="@string/sample_main_navigate_observable_list"
                    style="@style/MenuButton"/>

            <me.shouheng.uix.widget.button.NormalButton
                    android:id="@+id/btn_to_second"
                    app:btn_corner_radius="5dp"
                    android:text="@string/sample_main_navigate_to_second"
                    style="@style/MenuButton"/>

            <me.shouheng.uix.widget.button.NormalButton
                    android:id="@+id/btn_request_user"
                    app:btn_corner_radius="5dp"
                    android:text="@string/sample_main_request_user_data"
                    style="@style/MenuButton"/>

            <me.shouheng.uix.widget.button.NormalButton
                    android:id="@+id/btn_to_sample"
                    app:btn_corner_radius="5dp"
                    android:text="@string/sample_main_navigate_to_sample"
                    style="@style/MenuButton"/>

            <me.shouheng.uix.widget.button.NormalButton
                    android:id="@+id/btn_download"
                    app:btn_corner_radius="5dp"
                    android:text="@string/sample_main_download"
                    style="@style/MenuButton"/>

            <me.shouheng.uix.widget.button.NormalButton
                    android:id="@+id/btn_utils"
                    app:btn_corner_radius="5dp"
                    android:visibility="gone"
                    android:text="@string/sample_main_launch_utils"
                    style="@style/MenuButton"/>

            <me.shouheng.uix.widget.button.NormalButton
                    android:id="@+id/btn_pref"
                    app:btn_corner_radius="5dp"
                    android:text="@string/sample_main_preferences"
                    style="@style/MenuButton"/>

            <me.shouheng.uix.widget.button.NormalButton
                    android:id="@+id/btn_crash"
                    app:btn_corner_radius="5dp"
                    android:text="@string/sample_main_crash"
                    style="@style/MenuButton"/>

            <me.shouheng.uix.widget.button.NormalButton
                    android:id="@+id/btn_vm_post"
                    app:btn_corner_radius="5dp"
                    android:text="@string/sample_main_vm_post"
                    style="@style/MenuButton"/>

            <me.shouheng.uix.widget.button.NormalButton
                android:id="@+id/btn_start_result"
                app:btn_corner_radius="5dp"
                android:text="Activity: start for result"
                style="@style/MenuButton"/>

            <me.shouheng.uix.widget.button.NormalButton
                android:id="@+id/btn_f_start_result"
                app:btn_corner_radius="5dp"
                android:text="Fragment: start for result"
                style="@style/MenuButton"/>

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>